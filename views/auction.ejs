<%- layout('layout') %>


<% if (message == "true") { %>
    <h1 class="text-center text-6xl font-extrabold mt-[4vh] mb-[4vh]">Auction</h1>
    <meta http-equiv="refresh" content="5">
    <%= item.product %>
    <%= item.image %>
    <%= item.description %>
    <%= item.biddingPrice%>
    <%= item.highestBidder%>
    <form action="/auction/<%=item._id%>/buy" method="post">
        <select name="bid">
            <option disabled selected>Type:</option>
            <option value="1">+1</option>
            <option value="3">+3</option>
            <option value="5">+5</option>
            <option value="10">+10</option>
        </select>
        <button type="submit">BID HIGHERRR!!!!</button>
    </form>
<% } else {%>
    <meta http-equiv="refresh" content="5">
    <h1 class="text-center text-6xl font-extrabold mt-[4vh] mb-[4vh]"><%= message %></h1>
<% } %>
