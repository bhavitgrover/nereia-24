<%- layout('layout') %>


    <% if (message=="true" ) { %>
        <meta http-equiv="refresh" content="5">

        <h1 class="text-center text-5xl font-extrabold mt-[4vh] mb-[4vh]">Auction</h1>
        <div id="main"
            class="w-fit bg-periwinkle m-auto mt-5 flex flex-row p-[5vh] rounded-lg justify-center items-center gap-[3vw]">

            <div id="left">

                <img src="<%= item.image %>" class="object-cover w-[20vw]">
                
            </div>
            <div id="right">
                <p>Exhibit Name</p>
                <h1 class="text-3xl font-bold uppercase spacing tracking-wide">
                    <%= item.product %>
                </h1>
                <p>Exhibit Description
                    </p><p class=" uppercase font-bold">
                    <%= item.description %>
                </p>
                <br>

                <p class="">Your current nerit balance: <br><span class="font-bold text-3xl">η&nbsp;<%= wallet.money %></span>
                </p><br>
                <p class="">
                    Current highest bid:
                    <br><span class="font-bold text-3xl">η&nbsp;<%= item.biddingPrice%></span>
                </p>
                <p class="">
                    Current highest bidder:
                    <br><span class="font-bold text-3xl">
                        <%= bidder%>
                    </span>
                </p>
                <form action="/auction/<%=item._id%>/buy" method="post" class="flex flex-row gap-2 mt-3">
                    <select name="bid" class=" m-auto focus:outline-none h-[7vh] px-[1vw] py=[2vw]">
                        <option disabled selected aria-required="true">Increment bid by:</option>
                        <option value="1">+1</option>
                        <option value="3">+3</option>
                        <option value="5">+5</option>
                        <option value="10">+10</option>
                    </select>
                    <button type="submit"
                    class="flex flex-row items-center justify-center gap-2 px-[1vw] py-[2vh] border-none text-[#fff] bg-accent-dark m-auto">Increment
                    Bid</button>
                </form>
            </div>
        </div>
        <% } else {%>
            <div class="flex flex-col justify-center items-center">

                <meta http-equiv="refresh" content="5">
                <h1 class="text-center text-4xl font-extrabold mt-[4vh] mb-[4vh]">
                    <%= message %>
                </h1>
                <a href="/shop"><p>&larr; Go Back</p></a>
            </div>
            <% } %>