<%- layout('layout') %>


    <% if (message=="true" ) { %>
        <meta http-equiv="refresh" content="5">

        <div id="main"
            class="w-fit bg-periwinkle m-auto mt-5 flex flex-col p-[5vh] rounded-lg justify-center items-center">
            <h1 class="text-center text-5xl font-extrabold mt-[4vh] mb-[4vh]">Auction</h1>
                <h1 class="text-3xl font-bold uppercase spacing tracking-wide">
                    <%= item.product %>
                </h1>
                <img src="<%= item.image %>" class="w-[20vw]">
                <p>
                    <%= item.description %>
                </p>

                <p class="text-xl">Your current nerit balance: <span class="font-bold">η&nbsp;<%= wallet.money %></span>
                </p>
                <p class="text-xl">
                    Current highest bid:
                    <span class="font-bold">η&nbsp;<%= item.biddingPrice%></span>
                </p>
                <p class="text-xl">
                    Current highest bidder:
                    <span class="font-bold">
                        <%= item.highestBidder%>
                    </span>
                </p>
                <form action="/auction/<%=item._id%>/buy" method="post" class="flex flex-row gap-2 mt-3">
                    <select name="bid" class=" m-auto focus:outline-none h-[7vh] px-[1vw] py=[2vw]">
                        <option disabled selected aria-required="true">Increment bid by:</option>
                        <option value="1">+1</option>
                        <option value="3">+3</option>
                        <option value="5">+5</option>
                        <option value="10">+10</option>
                    </select>
                    <button type="submit"
                        class="flex flex-row items-center justify-center gap-2 px-[1vw] py-[2vh] border-none text-[#fff] bg-accent-dark m-auto">Increment
                        Bid</button>
                </form>
        </div>
        <% } else {%>
            <meta http-equiv="refresh" content="5">
            <h1 class="text-center text-6xl font-extrabold mt-[4vh] mb-[4vh]">
                <%= message %>
            </h1>
            <% } %>